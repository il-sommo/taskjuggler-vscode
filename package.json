{
  "name": "taskjuggler-syntax",
  "displayName": "TaskJuggler Language Support",
  "description": "Complete language support for TaskJuggler: syntax highlighting, snippets, folding, IntelliSense, and AI-powered features",
  "version": "0.2.2",
  "buildDate": "2026-01-29",
  "publisher": "fabrizio-vacca",
  "author": {
    "name": "Fabrizio Vacca",
    "email": "fabrizio.vacca@gmail.com"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "images/icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:taskjuggler"
  ],
  "contributes": {
    "languages": [
      {
        "id": "taskjuggler",
        "aliases": [
          "TaskJuggler",
          "tjp"
        ],
        "extensions": [
          ".tjp",
          ".tji"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/file-icon.svg",
          "dark": "./images/file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "taskjuggler",
        "scopeName": "source.taskjuggler",
        "path": "./syntaxes/taskjuggler.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "taskjuggler",
        "path": "./snippets/taskjuggler.json"
      }
    ]
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/il-sommo/taskjuggler-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/il-sommo/taskjuggler-vscode/issues"
  },
  "homepage": "https://github.com/il-sommo/taskjuggler-vscode#readme",
  "keywords": [
    "taskjuggler",
    "project management",
    "syntax highlighting",
    "snippets",
    "code completion",
    "tjp",
    "tji",
    "project planning",
    "resource management",
    "ai",
    "intellisense"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/vscode": "^1.108.1",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
