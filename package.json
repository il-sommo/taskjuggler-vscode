{
  "name": "taskjuggler-syntax",
  "displayName": "TaskJuggler Language Support",
  "description": "Complete TaskJuggler 3.x language server: IntelliSense, validation, navigation (outline, find references, rename), real-time diagnostics, 88 snippets, context-aware completions, and comprehensive refactoring tools",
  "version": "0.5.5",
  "buildDate": "2026-01-31",
  "publisher": "fabrizio-vacca",
  "author": {
    "name": "Fabrizio Vacca",
    "email": "fabrizio.vacca@gmail.com"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters"
  ],
  "icon": "images/icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:taskjuggler",
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "taskjuggler",
        "aliases": [
          "TaskJuggler",
          "tjp"
        ],
        "extensions": [
          ".tjp",
          ".tji"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/file-icon.svg",
          "dark": "./images/file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "taskjuggler",
        "scopeName": "source.taskjuggler",
        "path": "./syntaxes/taskjuggler.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "taskjuggler",
        "path": "./snippets/taskjuggler.json"
      }
    ],
    "commands": [
      {
        "command": "taskjuggler.insertProject",
        "title": "Insert Project (Interactive)",
        "category": "TaskJuggler"
      },
      {
        "command": "taskjuggler.insertTask",
        "title": "Insert Task (Interactive)",
        "category": "TaskJuggler"
      },
      {
        "command": "taskjuggler.insertResource",
        "title": "Insert Resource (Interactive)",
        "category": "TaskJuggler"
      },
      {
        "command": "taskjuggler.insertReport",
        "title": "Insert Report (Interactive)",
        "category": "TaskJuggler"
      },
      {
        "command": "taskjuggler.insertAllocate",
        "title": "Insert Allocate (Interactive)",
        "category": "TaskJuggler"
      },
      {
        "command": "taskjuggler.insertDependencies",
        "title": "Insert Dependencies (Interactive)",
        "category": "TaskJuggler"
      },
      {
        "command": "taskjuggler.insertVacation",
        "title": "Insert Vacation (Interactive)",
        "category": "TaskJuggler"
      },
      {
        "command": "taskjuggler.insertShift",
        "title": "Insert Shift (Interactive)",
        "category": "TaskJuggler"
      }
    ]
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/il-sommo/taskjuggler-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/il-sommo/taskjuggler-vscode/issues"
  },
  "homepage": "https://github.com/il-sommo/taskjuggler-vscode#readme",
  "keywords": [
    "taskjuggler",
    "project management",
    "syntax highlighting",
    "snippets",
    "code completion",
    "tjp",
    "tji",
    "project planning",
    "resource management",
    "ai",
    "intellisense",
    "validation",
    "diagnostics",
    "refactoring",
    "rename",
    "find references",
    "outline",
    "navigation",
    "go to definition",
    "language server",
    "semantic validation",
    "circular dependency",
    "real-time errors",
    "context-aware",
    "parameter hints",
    "signature help"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "echo 'Linting...'",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^25.1.0",
    "@types/vscode": "^1.108.1",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^3.7.1",
    "glob": "^13.0.0",
    "mocha": "^10.2.0",
    "typescript": "^5.9.3"
  }
}