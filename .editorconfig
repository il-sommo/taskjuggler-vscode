# EditorConfig for TaskJuggler files
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{tjp,tji}]
indent_style = tab
indent_size = 4

[*.{json,md}]
indent_style = space
indent_size = 2

[*.{sh,ps1}]
indent_style = space
indent_size = 2
